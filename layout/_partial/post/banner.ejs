<% if (post.link){ %>
  <div class="banner-div" itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><img src="<%= post.banner %>" /></a>
  </div>
<% } else if (post.banner){ %>
  <% if (index){ %>
    <div class="banner-div" itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><img src="<%= post.banner %>" /></a>
    </div>
  <% } else { %>
    <div class="<%= class_name %> banner-div" itemprop="name">
      <img src="<%= post.banner %>" />
    </div>
  <% } %>
<% } %>