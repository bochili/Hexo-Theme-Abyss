$block-caption
  text-decoration: none
  text-transform: uppercase
  color: color-grey
  margin-bottom: 1em
  margin-left: 5px
  line-height: 1em
  text-shadow: 0 1px #fff
  font-weight: bold

$block
  background: #fff
  box-shadow: 0px 3px 92px 0px rgba(0, 0, 0, 0.07)
  border-radius: 35px
$shadow
  box-shadow: 0px 3px 92px 0px rgba(0, 0, 0, 0.07)
$base-style
  h1
    font-size: 2em
  h2
    font-size: 1.5em
  h3
    font-size: 1.3em
  h4
    font-size: 1.2em
  h5
    font-size: 1em
  h6
    font-size: 1em
    color: color-grey
  hr
    border: 1px dashed color-border
  strong
    font-weight: bold
  em, cite
    font-style: italic
  sup, sub
    font-size: 0.75em
    line-height: 0
    position: relative
    vertical-align: baseline
  sup
    top: -0.5em
  sub
    bottom: -0.2em
  small
    font-size: 0.85em
  acronym, abbr
    border-bottom: 1px dotted
  ul, ol, dl
    margin: 10px 0px
  ul, ol
    ul, ol
      margin-top: 0
      margin-bottom: 0
  ol
    list-style: decimal
  dt
    font-weight: bold